<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://camel.apache.org/schema/spring">
    <!-- Define additional camel routes here file:config/camel/*.xml is automatically
        scanned -->
    <route id="send-email-route" autoStartup="true">
        <from uri="direct:send-email-queue"/>
        <log message="Sending email..."/>
        <process ref="emailSenderProcessor"/>
        <choice>
            <when>
                <simple>${header.return} == "true"</simple>
                <log
                        message="Message ${header.subject} was sent successfully to ${header.toEmail}"
                        loggingLevel="INFO" logName="eu.novobit"/>
            </when>
            <otherwise>
                <log
                        message="Error: Message ${header.subject} was not sent to ${header.toEmail}"
                        loggingLevel="INFO" logName="eu.novobit"/>
                <to uri="direct:send-email-queue"/>
                <delay>
                    <constant>60</constant>
                </delay>
            </otherwise>
        </choice>
    </route>

    <route id="send-email-consumer-route" autoStartup="true">
        <from uri="kafka:{{spring.kafka.topics.send-email}}?brokers={{spring.kafka.producer.bootstrap-servers}}"/>
        <log message="Receiving email..."/>
        <process ref="kafkaEmailSenderConsumerProcessor"/>
        <choice>
            <when>
                <simple>${header.return} == "true"</simple>
                <log
                        message="Message ${header.subject} was queued successfully to ${header.toEmail}"
                        loggingLevel="INFO" logName="eu.novobit"/>
            </when>
            <otherwise>
                <log
                        message="Error: Message ${header.subject} was not sent to ${header.toEmail}"
                        loggingLevel="INFO" logName="eu.novobit"/>
                <to uri="direct:send-email-queue"/>
                <delay>
                    <constant>60</constant>
                </delay>
            </otherwise>
        </choice>
    </route>
</routes>
