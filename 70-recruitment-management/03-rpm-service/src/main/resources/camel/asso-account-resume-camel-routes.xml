<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://camel.apache.org/schema/spring">
    <!-- Define additional camel routes here file:config/camel/*.xml is automatically
        scanned -->
    <route id="asso-account-resume-route" autoStartup="true">
        <from uri="kafka:{{spring.kafka.topics.rpm-asso-account}}?brokers={{spring.kafka.producer.bootstrap-servers}}"/>
        <log message="Register api association resume account..."/>
        <process ref="assoAccountResumeProcessor"/>
        <choice>
            <when>
                <simple>${header.return} == "true"</simple>
                <log message="Reading AssoAccountDto from rpm-asso-account topic..." loggingLevel="INFO"/>
            </when>
            <otherwise>
                <log
                        message="Error: Api was not registered"
                        loggingLevel="INFO" logName="eu.novobit"/>
            </otherwise>
        </choice>
    </route>
</routes>
